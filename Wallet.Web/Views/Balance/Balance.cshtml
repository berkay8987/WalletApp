@model Wallet.Core.Entitites.ViewModels.UpdateBalanceViewModel

@{
    ViewData["Title"] = "Update Balance";
}

<div class="container mt-5" style="max-width: 400px;">
    <h2>Update Balance</h2>

    <form asp-action="UpdateBalance" method="post">
        <div class="mb-3">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control" readonly value=@User.Identity.Name/>
        </div>

        <div class="mb-3">
            <label asp-for="Balance" class="form-label"></label>
            <input asp-for="Balance" class="form-control" type="number" step="0.01" min="0" />
            <span asp-validation-for="Balance" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update Balance</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
