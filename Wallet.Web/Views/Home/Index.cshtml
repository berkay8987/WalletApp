<style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f5f5;
      margin: 20px;
    }
    h1 {
      text-align: center;
      color: #333;
      margin-bottom: 30px;
    }
    .container {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
    }
    .product-card {
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      padding: 15px 20px;
      width: 180px;
      text-align: center;
      transition: transform 0.2s ease;
      cursor: pointer;
    }
    .product-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 12px rgba(0,0,0,0.15);
    }
    .product-name {
      font-weight: bold;
      font-size: 1.1em;
      margin-bottom: 8px;
      color: #222;
      min-height: 45px;
    }
    .product-price {
      color: #e67e22;
      font-size: 1.2em;
      font-weight: 600;
    }
</style>
