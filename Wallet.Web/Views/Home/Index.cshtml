@using Wallet.Core.Entitites.Models
@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background: #f5f5f5;
        margin: 20px;
    }

    h1 {
        text-align: center;
        color: #333;
        margin-bottom: 30px;
    }

    .container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .product-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 15px 20px;
        width: 180px;
        text-align: center;
        cursor: pointer;
    }

    .product-name {
        font-weight: bold;
        font-size: 1.1em;
        margin-bottom: 8px;
        color: #222;
        min-height: 45px;
    }

    .product-price {
        color: #e67e22;
        font-size: 1.2em;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .buy-btn {
        background-color: #e67e22;
        border: none;
        color: white;
        padding: 8px 15px;
        font-size: 1em;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .buy-btn:hover {
            background-color: #cf711c;
        }
</style>

<body>
    <h1>Products</h1>
    <div class="container">

        @foreach (var product in Model)
        {
            <div class="product-card">
                <div class="product-name">@product.Name</div>
                <div class="product-price">₺@product.Price</div>
                <form method="post" action="/Product/Buy">
                    <input type="hidden" name="ProductName" value="@product.Name" />
                    <input type="hidden" name="Price" value="@product.Price" />
                    <button type="submit" class="buy-btn">Buy</button>
                </form>
            </div>
        }
    </div>
</body>