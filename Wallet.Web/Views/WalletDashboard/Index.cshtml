@using Wallet.Core.Entitites.Enums
@using Wallet.Core.Entitites.ViewModels;

@model WalletDashboardViewModel;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<style>
    body {
        background: #fff;
        color: #222;
        font-family: monospace, monospace;
        padding: 20px;
    }

    .box {
        border: 1px solid #444;
        padding: 10px;
        margin-bottom: 20px;
    }

    .header {
        border-bottom: 1px dotted #444;
        padding-bottom: 5px;
        margin-bottom: 10px;
        font-weight: bold;
        font-size: 1.2em;
        color: #111;
    }

    .wallet-info {
        border: 1px dashed #444;
        padding: 15px;
        margin-bottom: 15px;
        background: #f0f0f0;
        color: #222;
    }

        .wallet-info div {
            margin: 5px 0;
        }

    .actions span {
        margin-right: 15px;
        cursor: pointer;
        user-select: none;
        color: #555;
    }

        .actions span:hover {
            text-decoration: underline;
        }

    .actions .add {
        color: #388e3c;
    }

    .actions .subtract {
        color: #d32f2f;
    }

    .actions .update {
        color: #1976d2;
    }

    .history {
        border-top: 1px dotted #444;
        padding-top: 10px;
        color: #222;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.9em;
    }

        table th,
        table td {
            border: 1px dotted #444;
            padding: 6px 10px;
            text-align: left;
        }

        table th {
            color: #e64a19;
        }

    .amount-add {
        color: #388e3c;
    }

    .amount-subtract {
        color: #d32f2f;
    }
</style>
<body>
    <div class="box">
        <div class="header">Wallet Dashboard - <strong>@Model.User.Firstname @Model.User.Lastname</strong></div>

        <div class="wallet-info">
            <div>🪙 Current Balance    [ $ <strong>@Model.User.Balance</strong> ]</div>
            <div>Last Updated: @Model.User.LastUpdated</div>
        </div>

        <div class="actions">
            <span class="add" style="cursor:pointer" data-bs-toggle="modal" data-bs-target="#addBalanceModal">[➕ Add Balance]</span>
            <span class="subtract" style="cursor:pointer" data-bs-toggle="modal" data-bs-target="#subtractBalanceModal">[➖ Subtract Balance]</span>
            <span class="update">[🔄 Update]</span>
            <form method="post" asp-controller="Account" asp-action="Logout" style="display:inline;">
                <button type="submit" style="background:none; border:none; color:#d32f2f; cursor:pointer;">[🚪 Logout]</button>
            </form>
        </div>

        <div class="history">
            <div style="border-bottom: 1px dotted #444; padding-bottom: 5px; margin-bottom: 10px">
                🕒 Transaction History (Last 5 transactions)
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Transaction Type</th>
                        <th>Amount</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>07/01/2025</td>
                        <td>Add Balance</td>
                        <td class="amount-add">+$100.00</td>
                        <td>Promotion</td>
                    </tr>
                    <tr>
                        <td>06/30/2025</td>
                        <td>Subtract Balance</td>
                        <td class="amount-subtract">-$50.00</td>
                        <td>Purchase</td>
                    </tr>

                    @foreach (var transaction in Model.Transactions)
                    {
                        <tr>
                            <td>@transaction.Date</td>
                            <td>@transaction.TransactionType.ToString()</td>
                            <td class="@(transaction.TransactionType == TransactionType.AddBalance ? "amount-add" : "amount-subtract")">
                                @transaction.TotalPrice
                            </td>
                            <td>Description</td>
                        </tr>
                    }
                    <tr><td>...</td><td>...</td><td>...</td><td>...</td></tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- AddBalance Modal -->
    <div class="modal fade"
         id="addBalanceModal"
         tabindex="-1"
         aria-labelledby="addBalanceLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <form method="post" asp-controller="Balance" asp-action="AddBalance" class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addBalanceLabel">Add Balance</h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text"
                               id="username"
                               name="UpdateBalance.Username"
                               value=@User.Identity.Name
                               readonly
                               class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="value" class="form-label">Value</label>
                        <input type="number"
                               step="0.01"
                               min="0"
                               id="value"
                               name="UpdateBalance.Balance"
                               required
                               class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Add Balance</button>
                </div>
            </form>
        </div>
    </div>

    <!-- SubtractBalance Modal -->
    <div class="modal fade"
         id="subtractBalanceModal"
         tabindex="-1"
         aria-labelledby="subtractBalanceLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <form method="post" asp-controller="Balance" asp-action="SubtractBalance" class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="subtractBalanceLabel">Subtract Balance</h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text"
                               id="username"
                               name="UpdateBalance.Username"
                               value=@User.Identity.Name
                               readonly
                               class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="value" class="form-label">Value</label>
                        <input type="number"
                               step="0.01"
                               min="0"
                               id="value"
                               name="UpdateBalance.Balance"
                               required
                               class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Subtract Balance</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>